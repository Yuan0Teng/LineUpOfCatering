                die("input error");
            }
            $link = new linkToDatabase();
            $conn = $link->link();
            $sql = "insert into line_up  values (" . $id . ", " . $phoneNum . ", " . $name . ", " .  $howManyPeople . ", " . $status . ");";
            if ($conn->query($sql) === TRUE) {
//                echo "New record created successfully";
            } else {
                echo "Error: " . $sql . "<br>" . $conn->error;
            }

            $conn->close();

        }

